<?xml version="1.0"?>

<config>

    <modules>
        <TBT_BetterNotifications>
            <version>2.0.1.0</version>
            <active>true</active>
            <codePool>community</codePool>
        </TBT_BetterNotifications>
    </modules>

    <adminhtml>
        <layout>
            <updates>
                <betternotifications module="TBT_BetterNotifications">
                    <file>betternotifications.xml</file>
                </betternotifications>
            </updates>
        </layout>
    </adminhtml>

    <admin>
        <routers>
            <adminnotification>
                <use>admin</use>
                <args>
                    <module>TBT_BetterNotifications</module>
                    <frontName>adminnotification</frontName>
                </args>
            </adminnotification>
        </routers>
    </admin>

</config>
